# -*-Tcl-*-
#-----------------------------------------------------------------------
# TITLE:
#    020-STRATEGY.test
#
# AUTHOR:
#    Will Duquette
#
# DESCRIPTION:
#    STRATEGY:* Order Tests
#
#-----------------------------------------------------------------------

#-----------------------------------------------------------------------
# Initialize tcltest(n) and athena(1)

if {[lsearch [namespace children] ::tcltest] == -1} {
    source [file join [file dirname [file normalize [info script]]] ted.tcl]

    # Initialize tcltest(n), app_athena(n), et al.
    ted init $argv
}

#-----------------------------------------------------------------------
# Test Suite
#
# The tests run in a namespace so as not to interfere with other
# test suites.

namespace eval ::athena_test::tests:: {
    #-------------------------------------------------------------------
    # Set up the test environment

    # Import tcltest(n)
    namespace import ::tcltest::*

    # Set up for tests

    proc setup {} {
        # TBD
    }

    # Clean up after a test

    proc cleanup {} {
        ted cleanup
    }

    #-------------------------------------------------------------------
    # STRATEGY:BLOCK:ADD

    test BLOCK:ADD-1.1 {required parameters} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:ADD
    } -cleanup {
        cleanup
    } -result {
        agent {required value}
    }

    test BLOCK:ADD-1.2 {unknown agent} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:ADD agent NONESUCH
    } -cleanup {
        cleanup
    } -result {
        agent {Invalid agent, should be one of: SYSTEM}
    }

    test BLOCK:ADD-2.1 {block added} -setup {
        setup
    } -body {
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        set S1 [strategy getname SYSTEM]
        $S1 blocks
    } -cleanup {
        cleanup
    } -match glob -result {::pot::block*}

    test BLOCK:ADD-2.2 {notifier event} -setup {
        setup
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}

    test BLOCK:ADD-2.3 {undo notifier event} -setup {
        setup
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        flunky undo
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}

    #-------------------------------------------------------------------
    # STRATEGY:BLOCK:DELETE

    test BLOCK:DELETE-1.1 {required parameters} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:DELETE
    } -cleanup {
        cleanup
    } -result {
        ids {required value}
    }

    test BLOCK:DELETE-1.2 {unknown ids} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:DELETE ids NONESUCH
    } -cleanup {
        cleanup
    } -result {
        ids {Invalid block ID: "NONESUCH"}
    }

    test BLOCK:DELETE-2.1 {one block deleted} -setup {
        setup
        set B1 [ted addblock SYSTEM]
        set B2 [ted addblock SYSTEM]
    } -body {
        ted orderx STRATEGY:BLOCK:DELETE ids [$B1 id]
        expr {[$S1 blocks] eq $B2}
    } -cleanup {
        cleanup
    } -result {1}

    test BLOCK:DELETE-2.2 {two blocks deleted} -setup {
        setup
        set B1 [ted addblock SYSTEM]
        set B2 [ted addblock SYSTEM]
    } -body {
        ted orderx STRATEGY:BLOCK:DELETE ids [list [$B1 id] [$B2 id]]
        $S1 blocks
    } -cleanup {
        cleanup
    } -result {}

    test BLOCK:DELETE-2.3 {notifier event} -setup {
        setup
        set B1 [ted addblock SYSTEM]
        set B2 [ted addblock SYSTEM]
    } -body {
        ted notifier bind ::strategy <blocks>
        ted orderx STRATEGY:BLOCK:DELETE ids [list [$B1 id] [$B2 id]]
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {
        {::strategy <blocks> delete * *}
        {::strategy <blocks> delete * *}
    }

    test BLOCK:DELETE-2.4 {undoes deletion} -setup {
        setup
        set B1 [ted addblock SYSTEM]
        set B2 [ted addblock SYSTEM]
        ted orderx STRATEGY:BLOCK:DELETE ids [list [$B1 id] [$B2 id]]
    } -body {
        flunky undo
        llength [$S1 blocks]
    } -cleanup {
        cleanup
    } -result {2}

    test BLOCK:DELETE-2.5 {undo notifier event} -setup {
        setup
        set B1 [ted addblock SYSTEM]
        set B2 [ted addblock SYSTEM]
        ted orderx STRATEGY:BLOCK:DELETE ids [list [$B1 id] [$B2 id]]
    } -body {
        ted notifier bind ::strategy <blocks>
        flunky undo
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {
        {::strategy <blocks> add * *}
        {::strategy <blocks> add * *}
    }

    #-------------------------------------------------------------------
    # STRATEGY:BLOCK:MOVE

    test BLOCK:MOVE-1.1 {required parameters} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:MOVE
    } -cleanup {
        cleanup
    } -result {
        block_id {required value}
        where {required value}
    }

    test BLOCK:MOVE-1.2 {unknown block} -setup {
        setup
    } -body {
        ted orderx -reject STRATEGY:BLOCK:MOVE block_id NONESUCH where top
    } -cleanup {
        cleanup
    } -result {
        block_id {Invalid block ID: "NONESUCH"}
    }

    test BLOCK:MOVE-1.3 {invalid where} -setup {
        setup
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        lassign [$S1 blocks] B1 B2
    } -body {
        ted orderx -reject STRATEGY:BLOCK:MOVE block_id [$B2 id] where NONESUCH
    } -cleanup {
        cleanup
    } -result {
        where {invalid value "NONESUCH", should be one of: top, up, down, bottom}
    }

    test BLOCK:MOVE-2.1 {block moved} -setup {
        setup
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        lassign [$S1 blocks] B1 B2
    } -body {
        set before [list $B1 $B2]
        ted orderx STRATEGY:BLOCK:MOVE block_id [$B2 id] where top
        set after [$S1 blocks]
        expr {$after eq [lreverse $before]}
    } -cleanup {
        cleanup
    } -result {1}

    test BLOCK:MOVE-2.2 {notifier event} -setup {
        setup
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        lassign [$S1 blocks] B1 B2
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        ted orderx STRATEGY:BLOCK:MOVE block_id [$B2 id] where top
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}

    test BLOCK:MOVE-2.3 {undo notifier event} -setup {
        setup
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        ted orderx STRATEGY:BLOCK:ADD agent SYSTEM
        lassign [$S1 blocks] B1 B2
        ted orderx STRATEGY:BLOCK:MOVE block_id [$B2 id] where top
    } -body {
        ted notifier bind ::projectlib::bean <Monitor>
        flunky undo
        ted notifier received
    } -cleanup {
        cleanup
    } -match glob -result {*{::projectlib::bean <Monitor>}*}

 
    #-------------------------------------------------------------------
    # Cleanup

    cleanupTests
}

namespace delete ::athena_test::tests::





