    #-------------------------------------------------------------------
    # MAD:COOP

    test COOP-1.1 {required parms}   -setup {
        lock
    } -body {
        ted order -reject MAD:COOP {}
    } -cleanup {
        cleanup
    } -result {
        mad_id {required value}
        f {required value}
        g {required value}
        mag {required value}
    }
    
    test COOP-1.2 {invalid mad_id} -setup {
