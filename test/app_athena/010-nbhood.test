        ted create JOE
    } -body {
        
        nbhood mutate create \
            [dict merge [ted entity NB1] {controller JOE}]
        ted querylist {SELECT * FROM nbhoods}
    } -cleanup {
        cleanup
    } -result {
n               NB1
longname        Here
local           1
stacking_order  1
urbanization    URBAN
