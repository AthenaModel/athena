#-----------------------------------------------------------------------
# undo

test undo-1.1 {Undo orders} -setup {
    setup
} -body {
    set result [list]
    lappend result $orderResult
    myflunky send normal MY:TEST -x 1
    lappend result $orderResult
    myflunky send normal MY:TEST -x 2
    lappend result $orderResult
    myflunky send normal MY:TEST -x 3
    lappend result $orderResult
    myflunky undo
    lappend result $orderResult
    myflunky undo
    lappend result $orderResult
    myflunky undo
    lappend result $orderResult
    lappend result [myflunky canundo]
} -cleanup {
    cleanup
} -result {{} 1 2 3 2 1 {} 0}

